SRC = main.c school.c
NAME = school

all: $(NAME)

$(NAME): main.o school.o
	gcc -Wall -Werror -Wextra -pedantic main.o school.o -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) main.o school.o

fclean: clean oclean

re: fclean all

main.o: main.c m.h
	gcc -Wall -Werror -Wextra -pedantic -c main.c -o main.o

school.o: school.c m.h
	gcc -Wall -Werror -Wextra -pedantic -c school.c -o school.o

.PHONY: all clean fclean oclean re
