SRC := main.c school.c
NAME := school
CC := gcc
CFLAGS := -Wall -Werror -Wextra -pedantic

.PHONY: all clean fclean oclean re

all: $(NAME)

$(NAME): main.o school.o
	$(CC) $(CFLAGS) main.o school.o -o $(NAME)

clean:
	@rm -f *~ $(NAME)

oclean:
	@rm -f main.o school.o

fclean: clean oclean

re: fclean all

main.o: main.c
	$(CC) $(CFLAGS) -c main.c -o main.o

school.o: school.c
	$(CC) $(CFLAGS) -c school.c -o school.o

%: %.c m.h
	$(CC) $(CFLAGS) $< -o $@
